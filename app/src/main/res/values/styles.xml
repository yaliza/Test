<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:overScrollMode">never</item>
        <item name="materialCardViewStyle">@style/AppTheme.MaterialCard</item>
        <item name="android:scrollViewStyle">@style/AppTheme.ScrollView</item>
    </style>

    <style name="AppTheme.Text"></style>

    <style name="AppTheme.Text.NavigationDrawer">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.Text.NavigationDrawer.Small">
        <item name="android:textSize">@dimen/text_S</item>
    </style>

    <style name="AppTheme.Text.NavigationDrawer.Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/nav_drawer_item_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_L</item>
    </style>

    <style name="AppTheme.Text.NavigationDrawer.Item.Clickable">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="AppTheme.LoginButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/login_button_height</item>
        <item name="android:layout_margin">@dimen/XL</item>
        <item name="android:clickable">true</item>
        <item name="android:elevation">4dp</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="AppTheme.Text.LevelSection">
        <item name="android:padding">@dimen/level_item_spacing</item>
        <item name="android:textSize">@dimen/text_XXL</item>
    </style>

    <style name="AppTheme.Text.LevelSection.Small">
        <item name="android:textSize">@dimen/text_S</item>
    </style>

    <style name="AppTheme.Text.Certificate">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.Text.Certificate.Header">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_XXL</item>
    </style>

    <style name="AppTheme.Text.Certificate.Header.Small">
        <item name="android:textSize">@dimen/text_L</item>
    </style>

    <style name="AppTheme.Text.Certificate.Label">
        <item name="android:layout_margin">@dimen/XS</item>
        <item name="android:textSize">@dimen/text_S</item>
        <item name="android:textColor">@color/grey50</item>
    </style>

    <style name="AppTheme.Text.Certificate.Value">
        <item name="android:layout_margin">@dimen/XS</item>
        <item name="android:textSize">@dimen/text_L</item>
        <item name="android:textColor">@color/blue90</item>
    </style>

    <style name="AppTheme.Text.Section.Profile">
        <item name="android:textColor">@color/grey90</item>
        <item name="android:textSize">@dimen/text_L</item>
    </style>

    <style name="AppTheme.Text.Section">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/M</item>
        <item name="android:layout_marginEnd">@dimen/M</item>
        <item name="android:textColor">@color/grey50</item>
        <item name="android:textSize">@dimen/text_S</item>
    </style>

    <style name="AppTheme.Text.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/AppTheme.Text.TabLayout.TabItem</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="tabTextColor">@color/grey50</item>
    </style>

    <style name="AppTheme.Text.TabLayout.TabItem">
        <item name="android:textSize">@dimen/text_XS</item>
        <item name="android:textColor">@color/grey50</item>
    </style>

    <style name="AppTheme.RatingBar">
        <item name="android:isIndicator">true</item>
        <item name="android:stepSize">1</item>
        <item name="android:numStars">3</item>
        <item name="android:progressTint">@color/orange50</item>
        <item name="android:progressBackgroundTint">@color/grey30</item>
    </style>

    <style name="AppTheme.RatingBar.Small" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:isIndicator">true</item>
        <item name="android:stepSize">1</item>
        <item name="android:numStars">3</item>
        <item name="android:progressTint">@color/orange50</item>
        <item name="android:progressBackgroundTint">@color/grey30</item>
    </style>

    <style name="AppTheme.Icon" />

    <style name="AppTheme.Icon.Circle">
        <item name="android:background">@drawable/bg_circle</item>
        <item name="android:tint">@android:color/white</item>
        <item name="android:backgroundTint">@color/green20</item>
        <item name="android:layout_width">@dimen/icon_M</item>
        <item name="android:layout_height">@dimen/icon_M</item>
    </style>

    <style name="AppTheme.Icon.Circle.Gradient">
        <item name="android:background">@drawable/bg_circle_gradient</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:layout_width">@dimen/icon_L</item>
        <item name="android:layout_height">@dimen/icon_L</item>
    </style>

    <style name="AppTheme.Switch">
        <item name="android:background">@null</item>
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="android:track">@drawable/switch_track</item>
    </style>

    <style name="AppTheme.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert" />

    <style name="AppTheme.Dialog.FullWidth">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="AppTheme.Dialog.SlideUpAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="AppTheme.Dialog.SlideRightAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_right</item>
        <item name="android:windowExitAnimation">@anim/slide_left</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button" />

    <style name="AppTheme.Button.Rounded" parent="Widget.MaterialComponents.Button" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/orange60</item>
        <item name="cornerRadius">20dp</item>
        <item name="rippleColor">@color/grey30</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="AppTheme.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/orange50</item>
    </style>

    <style name="AppTheme.MaterialCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="rippleColor">@color/grey30</item>
        <item name="cardElevation">6dp</item>
    </style>

    <style name="AppTheme.MaterialCard.Option">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginTop">@dimen/M</item>
        <item name="android:layout_marginBottom">@dimen/M</item>
        <item name="android:stateListAnimator">@animator/states_quiz_answer</item>
        <item name="android:translationZ">@dimen/quiz_translation_z_background_below</item>
        <item name="strokeColor">@color/green30</item>
    </style>

    <style name="AppTheme.ScrollView">
        <item name="android:scrollbars">none</item>
    </style>

</resources>
