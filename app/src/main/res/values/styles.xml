<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Text"></style>

    <style name="AppTheme.Text.NavigationDrawer">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.Text.NavigationDrawer.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.Text.NavigationDrawer.Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/nav_drawer_item_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Text.NavigationDrawer.Item.Clickable">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="AppTheme.LoginButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/login_button_height</item>
        <item name="android:layout_margin">32dp</item>
        <item name="android:clickable">true</item>
        <item name="android:elevation">4dp</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="AppTheme.Text.LevelSection">
        <item name="android:padding">@dimen/level_item_spacing</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.Text.LevelSection.Small">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="AppTheme.RatingBar">
        <item name="android:isIndicator">true</item>
        <item name="android:stepSize">1</item>
        <item name="android:numStars">3</item>
        <item name="android:progressTint">@color/orange</item>
    </style>

</resources>
