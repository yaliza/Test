<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="AppTheme.Text"></style>

    <style name="AppTheme.Text.NavigationDrawer">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.Text.NavigationDrawer.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.Text.NavigationDrawer.Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/nav_drawer_item_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Text.NavigationDrawer.Item.Clickable">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="AppTheme.LoginButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/login_button_height</item>
        <item name="android:layout_margin">@dimen/XL</item>
        <item name="android:clickable">true</item>
        <item name="android:elevation">4dp</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="AppTheme.Text.LevelSection">
        <item name="android:padding">@dimen/level_item_spacing</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.Text.LevelSection.Small">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="AppTheme.RatingBar">
        <item name="android:isIndicator">true</item>
        <item name="android:stepSize">1</item>
        <item name="android:numStars">3</item>
        <item name="android:progressTint">@color/orange</item>
        <item name="android:progressBackgroundTint">@color/grey30</item>
    </style>

    <style name="AppTheme.GradientIcon">
        <item name="android:background">@drawable/bg_circle_gradient</item>
        <item name="android:tint">@android:color/white</item>
        <item name="android:layout_width">@dimen/icon_L</item>
        <item name="android:layout_height">@dimen/icon_L</item>
    </style>

    <style name="AppTheme.Switch">
        <item name="android:background">@null</item>
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="android:track">@drawable/switch_track</item>
    </style>

</resources>
