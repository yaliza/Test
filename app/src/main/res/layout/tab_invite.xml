<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

    <ImageView
            style="@style/AppTheme.GradientIcon"
            android:layout_width="@dimen/icon_M"
            android:layout_height="@dimen/icon_M"
            android:src="@drawable/ic_mail" />

    <TextView
            style="@style/AppTheme.Text.TabLayout.TabItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/S"
            android:gravity="center"
            android:text="@string/tab_invite" />
</LinearLayout>