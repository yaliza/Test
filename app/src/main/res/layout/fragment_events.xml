<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <include
            android:id="@+id/toolbar"
            layout="@layout/view_toolbar" />

    <Button
            android:id="@+id/goToModularButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="open swipable"
            app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <Button
            android:id="@+id/infoDialogButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="info dialog"
            app:layout_constraintTop_toBottomOf="@id/goToModularButton" />

    <Button
            android:id="@+id/bottomInfoDialogButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="bottom info dialog"
            app:layout_constraintTop_toBottomOf="@id/infoDialogButton" />

    <Button
            android:id="@+id/logoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="logout"
            app:layout_constraintTop_toBottomOf="@id/bottomInfoDialogButton" />

</androidx.constraintlayout.widget.ConstraintLayout>