<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bnv_height">

    <com.rd.PageIndicatorView
            android:id="@+id/navDotsIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@android:color/transparent"
            android:translationZ="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:piv_animationType="worm"
            app:piv_radius="@dimen/bnv_dot_size"
            app:piv_selectedColor="@color/orange50"
            app:piv_unselectedColor="@color/grey10" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navBottomBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:paddingBottom="12dp"
            app:itemIconSize="@dimen/bnv_icon_size"
            app:itemIconTint="@color/bottom_nav_icon_color"
            app:labelVisibilityMode="unlabeled" />

</androidx.constraintlayout.widget.ConstraintLayout>