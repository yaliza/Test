<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/levelsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:paddingLeft="@dimen/level_item_spacing"
            android:paddingTop="@dimen/toolbar_height"
            android:paddingRight="@dimen/level_item_spacing"
            android:paddingBottom="@dimen/level_item_spacing"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <include layout="@layout/view_toolbar" />

    <include layout="@layout/view_progress_bar" />

    <ImageView
            android:id="@+id/learningImageView"
            style="@style/AppTheme.GradientIcon"
            android:layout_marginTop="@dimen/XXL"
            android:layout_marginEnd="@dimen/M"
            android:src="@drawable/ic_learning"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
