<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

    <include layout="@layout/view_progress_bar" />

    <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/swipableViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/swp_view_pager_top_margin"
            android:layout_marginBottom="@dimen/swp_peek_height" />

    <by.itechart.android.ui.view.BottomSheetView
            android:id="@+id/swipableBottomSheetView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:behavior_peekHeight="@dimen/swp_peek_height"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>