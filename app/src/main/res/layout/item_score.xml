<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="@dimen/score_width"
        android:layout_height="@dimen/score_height"
        android:layout_marginStart="@dimen/XS"
        android:layout_marginEnd="@dimen/XS">

    <ImageView
            android:id="@+id/scoreImageView"
            android:layout_width="@dimen/icon_XL"
            android:layout_height="@dimen/icon_XL"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/scoresTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_XS"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/scoreImageView"
            tools:text="75% QUIZ" />

</androidx.constraintlayout.widget.ConstraintLayout>