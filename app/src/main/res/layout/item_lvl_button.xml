<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <Button
            android:id="@+id/lvlExaminationButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="@dimen/lvl_button_margin"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:elevation="6dp"
            android:background="@drawable/ripple_button"/>

    <ImageView
            android:id="@+id/lvlLockImageView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_constraintTop_toTopOf="@id/lvlExaminationButton"
            app:layout_constraintBottom_toBottomOf="@id/lvlExaminationButton"
            app:layout_constraintLeft_toLeftOf="@id/lvlExaminationButton"
            android:src="@drawable/ic_lock_outline_black_24dp"
            android:elevation="10dp"
            android:layout_marginStart="15dp"/>

    <ImageView
            android:id="@+id/lvlMedalImageView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_constraintBottom_toBottomOf="@id/lvlExaminationButton"
            app:layout_constraintRight_toRightOf="@id/lvlExaminationButton"
            android:src="@drawable/medal"
            android:elevation="10dp"
            android:layout_marginEnd="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>